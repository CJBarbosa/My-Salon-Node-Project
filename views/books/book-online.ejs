<!DOCTYPE html>
<html class="h-100" lang="en">
  <head>
    <%- include('../layouts/head'); %>
  </head>
  <body class="d-flex flex-column h-100" id="book-online">
    <div class="container-xl">
      <!-- Header-->
      <%- include('../layouts/header'); %>
      <!-- Main -->
      <div class="row">
        <div class="col mb-5 text-center">
          <h2 class="border-top border-bottom bg-light mb-0">
            Book an Appointment
          </h2>
        </div>
      </div>
      <div class="row mb-5">
        <div class="col-8 py-3 custonbgb shadow">
          <h4 class="text-decoration-underline pt-3">Option 1:</h4>
          <p class="text-muted">
            Choose a day and time from the next 7 calendar days:
          </p>
        </div>
        <div class="col-4 py-3 custonbgb shadow">
          <h4 class="text-decoration-underline pt-3">Option 2:</h4>

          <!-- Date Picker Input -->
          <div class="wrapper">
            <label>
              <input
                id="input-pop"
                type="text"
                class="dateselect"
                placeholder="Click and chose a day"
                required="required"
              />
              <span
                ><img
                  src="images/table.svg"
                  class="line-height-0"
                  alt=""
                  width="20"
                  height="20"
                  title="Chose a day"
              /></span>
            </label>
          </div>
          <!-- End Date Picker Input -->
        </div>
        <!-- Force next columns to break to new line -->
        <div class="w-100 mt-1"></div>
        <div class="col-12 py-3 custonbgb shadow" id="weekHours"></div>
      </div>

      <div class="row mb-5">
        <div class="col text-center py-3 custonbgy shadow">
          <h4>Appointments</h4>
          <p class="fw-normal">
            Please arrive 15 mins prior to your appointment to ensure you
            receive your full service. We recommend that you book your next
            appointment prior to leaving the salon so that we can be sure to
            accommodate your schedule.
          </p>
        </div>
      </div>      
    </div>

    <!-- Footer -->
    <%- include('../layouts/footer'); %>
    <script>
      const events = (<%- JSON.stringify(events) %>);
      disableLink(events);      
    </script>
  </body>
</html>
