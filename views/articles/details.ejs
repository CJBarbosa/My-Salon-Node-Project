<% include ../layouts/article-header %>

<h3><%= new Date(article.date).toUTCString().slice(0,16) %></h3>
<h3>First Name: <%= article.firstName %></h3>
<h3>Last Name: <%= article.lastName %></h3>
<h3>Email: <%= article.email %></h3>
<h3>Phone: <%= article.phone %></h3>
<h3>Schedule: <%= article.schedule %></h3>
<h3>Index: <%= article.index %></h3>
<hr />

<small
  ><%= article.updatedAt.toLocaleString("en-US", {month: 'short', day:
  'numeric', year: 'numeric'}); %></small
>

<hr />
<a href="/articles/<%= article.id %>/update" class="btn btn-info float-right"
  >Update Article</a
>

<% include ../layouts/article-footer %>
