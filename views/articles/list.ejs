<!DOCTYPE html>
<html class="h-100" lang="en">
  <head>
    <%- include('../layouts/head'); %>
  </head>
  <body class="d-flex flex-column h-100" id="the-stylist">
    <div class="container-xl">
      <!-- Main -->

      <!-- <FULL SCREEN MODAL - OPTION 2> -->
      <div class="row">
        <div class="col-12">
          <div class="card mb-1 text-center bg-light shadow">
            <div class="card-header custonbgp h5" id="dateTitle">Date</div>
            <div class="card-body m-height h-100">
              <a
                href="/articles/create"
                class="btn btn-outline-primary col-sm-3 mb-3"
                >Create a new schedule</a
              >

              <table class="table">
                <thead class="custonbgb">
                  <tr>
                    <th scope="col">SCHEDULE:</th>
                    <th scope="col">NAME:</th>
                    <th scope="col">PHONE:</th>
                    <th scope="col">ACTION:</th>
                  </tr>
                </thead>
                <tbody>
                  <% articles.forEach((article) => { %>
                  <tr>
                    <th scope="row"><%= article.schedule %></th>
                    <td><%= article.firstName %> <%= article.lastName %></td>
                    <td><%= article.phone %></td>
                    <td>
                      <a
                        class="bk bk-detail btn btn-outline-success"
                        href="/articles/<%= article.id %>"
                        title="Details"
                      ></a>
                      <a
                        class="bk bk-edit btn btn-outline-primary"
                        href="#"
                        title="Edit"
                      ></a>
                      <a
                        class="bk bk-delete btn btn-outline-danger"
                        href="#"
                        title="Delete"
                      ></a>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <!-- </ULL SCREEN MODAL - OPTION 2> -->
    </div>

    <!-- Footer -->
    <%- include ../layouts/footer %>
    <script>
      // stringify the data passed from router to ejs (within the EJS template only)
      var data = <%- JSON.stringify(articles) %>
      //Passing it to js
      test(data);
    </script>
  </body>
</html>
